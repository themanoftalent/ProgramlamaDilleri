import java.util.Scanner;

public class NestedIf {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);

        while (true) {
            System.out.println("Yasinizi girin: ");
            int yas = sc.nextInt();

            if (yas < 16 || yas > 18) {
                System.out.println("Cikis icin 1'e basin.");
                int exitChoice = sc.nextInt();
                if (exitChoice == 1) {
                    break;
            }}

            System.out.println("Cinsiyetinizi girin (E/K): ");
            String cinsiyet = sc.next().toUpperCase();

            if (cinsiyet.equals("E") && cinsiyet !=("K")) {
                
            }


            System.out.println("Adinizin ilk harfini girin: ");
            char adIlkHarf = sc.next().toUpperCase().charAt(0);

            if  (adIlkHarf == 'B' || adIlkHarf == 'K') {
                System.out.println("Evinizde oturun.");
            } else {
                System.out.println("Sokaga cikabilirsiniz.");
            }

            break;
        }

        sc.close();
    }
}
