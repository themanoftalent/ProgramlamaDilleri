3) import java.util.Scanner;

public class Main {

    public static void main(String[] args) {
// iş için cevap alımı
        Scanner scanner = new Scanner(System.in);
        String isalım;

        do {
            System.out.println("web sayfası tasarlamayı biliyor musunuz ?(evet/hayır)");
            isalım = scanner.nextLine();
        } while (isalım.equals("evet"));

        System.out.println("işe alındınız.");
    }
}
