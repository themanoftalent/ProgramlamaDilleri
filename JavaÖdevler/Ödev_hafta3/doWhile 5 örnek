2)import java.util.Scanner;


public class Main {
    public static void main(String[] args) {

        // Şifre doğrulatma

        Scanner scanner = new Scanner(System.in);
         String sifre;

         do{
             System.out.println("sifrenizi giriniz :");
             sifre= scanner.next();
         }
         while(!sifre.equals("gizli"))

        System.out.println("sifre başarılı");
    }
}
