public class Main {
    public static void main(String[] args) {
        // 10 a kadar olan çift sayıların toplamı

        int toplam=0;
        int i=0;

        do{
            if(i%2==0)  {
                toplam=toplam+i;
            }
i++;
        }
while(i<=10);
        System.out.println("10 a kadar çift sayıların toplamı: "+toplam);
    }
}
