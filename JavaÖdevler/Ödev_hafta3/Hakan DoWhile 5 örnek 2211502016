  import java.util.Scanner;

public class BirdenGirilenDegereToplam {

	public static void main(String[] args) {
		Scanner scan=new Scanner(System.in);

		System.out.print("Dongunun hangi sayida sonlancag覺n覺 giriniz: ");
		int a=scan.nextInt();
		
		int i=1, toplam=0;
		
		do {
			
			toplam=i+toplam;
			i++;
			
		}while(i<=a);
		
		System.out.println(toplam);
	
	}
}

