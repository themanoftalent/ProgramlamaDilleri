  import java.util.Scanner;

public class SayininAraliginiBulma {

	public static void main(String[] args) {
		Scanner scan=new Scanner(System.in);
		int a;
		
		do {
			System.out.print("Lutfen bir deger giriniz: ");
			a=scan.nextInt();
			if(a<20 || a>30 ) {
				System.out.println("Girdiginiz sayi 20 ile 30 arasinda degildir.");
			}
			
		}while(a<20 || a>30);
			
		System.out.println("Girdiginiz sayi 20 ile 30 aras覺ndad覺r.");
		
	}

}

