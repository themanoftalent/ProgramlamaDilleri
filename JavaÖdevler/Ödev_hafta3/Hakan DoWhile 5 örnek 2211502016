import java.util.Scanner;

public class BirdenOnaKadarCiftToplam {

	public static void main(String[] args) {
		int i=1;
		int toplam=0;
		
		do {
			
			if(i%2==0) {
				toplam=i+toplam;
			}
			i++;
			
		}while(i<15);
		
		System.out.println(toplam);
	}
}

